.PHONY: all
all: help

.PHONY: test
test: ## Run the application unit tests
	go test -v ./...

.PHONY: build
build: ## Build the application RISC-V image with cartesi cli
	cartesi build

.PHONY: run
run: ## Run the application in the Cartesi Machine with cartesi cli
	cartesi run

.PHONY: fmt
fmt: ## Format all code
	$(START_LOG)
	@gofmt -w .
	@echo "Formatting completed"
	$(END_LOG)

.PHONY: clean
clean: ## Delete the application RISC-V image generated by cartesi cli
	rm -rf .cartesi

.PHONY: contracts
contracts: ## Deploy the asset contracts
	@forge script ./contracts/script/Deploy.s.sol \
			--root ./contracts \
			--rpc-url http://localhost:8080/anvil \
			--private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 \
			--broadcast \
			-vvv

.PHONY: help
help: ## Show help for each of the Makefile recipes
	@echo "Available commands:"
	@awk '/^[a-zA-Z0-9_-]+:.*##/ { \
		split($$0, parts, "##"); \
		split(parts[1], target, ":"); \
		printf "  \033[36m%-30s\033[0m %s\n", target[1], parts[2] \
	}' $(MAKEFILE_LIST)